{
  "description": "Hide YouTube video time and progress bar for a distraction and spoiler -free viewing experience. Enhance focus with this Firefox extension. Simple and effective.",
  "manifest_version": 2,
  "name": "No Spoilers: Youtube",
  "version": "0.2",
  "homepage_url": "https://github.com/0skater0/Firefox-No-Spoiler",
  "icons": {
    "128": "icons/YouTube-No-Spoiler-On.png"
  },

  "options_ui": {
    "page": "Firefox-No-Spoiler-Options.html",
    "open_in_tab": true
  },

  "permissions": [
    "*://*.youtube.com/*",
    "*://youtube.com/*",
    "activeTab",
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icons/YouTube-No-Spoiler-On.png",
    "default_title": "Show/hide spoilers"
  },

  "background": {
    "scripts": ["noSpoiler.js"]
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": ["disableAutoplay.js"]
    }
  ],

  "web_accessible_resources": [
    "icons/*.png"
  ]

}